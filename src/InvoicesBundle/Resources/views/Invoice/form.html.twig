{% extends '@Invoices/Default/two_columns.html.twig' %}




{% block form_ %}	

	{{ form_start(form, {'attr': {'class': 'text-left border border-light p-5'}}) }}

	<p class="h4 mb-4">Insert a new invoice</p>

	{{ form_errors(form) }}

	{{ form_row(form.invoiceDate) }}

    <!-- Name -->
	{{ form_row(form.invoiceNumber, {'attr': {'class': 'form-control mb-4'}}) }}

    <!-- Name -->
	{{ form_row(form.customerId, {'attr': {'class': 'form-control mb-4'}}) }}


	<p class="h5 mb-4">Invoice data: </p>
    <!-- Name -->
	{{ form_row(form.invoiceData.description, {'attr': {'class': 'form-control mb-4'}}) }}

    <!-- Name -->
	{{ form_row(form.invoiceData.quantity, {'attr': {'class': 'form-control mb-4'}}) }}

    <!-- Name -->
	{{ form_row(form.invoiceData.amount, {'attr': {'class': 'form-control mb-4'}}) }}

    <!-- Name -->
	{{ form_row(form.invoiceData.vatAmount, {'label': 'VAT %','attr': {'class': 'form-control mb-4'}}) }}

    <!-- Name -->
	{{ form_row(form.Add, {'label': 'Add to database', 'attr': {'class': 'btn btn-info btn-block'}}) }}

	{{ form_end(form) }}


{% endblock %}

{% block response %}
	
	{% if invoiceEntity is not null %}

		Inserted invoice: {{dump(invoiceEntity)}}
		
	{% endif %}

{% endblock %}